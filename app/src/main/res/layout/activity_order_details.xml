<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.OrderDetailsActivity"
>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/main_green"
                android:text="@string/detail_pesanan" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:id="@+id/orderDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    tools:context=".ui.activities.OrderDetailsActivity">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardStatusOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tvOrderStatusLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status_pesanan"
                                android:textColor="@color/black_head"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/tvOrderStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tvOrderStatusLabel"
                                app:layout_constraintBottom_toBottomOf="@id/tvOrderStatusLabel"
                                android:text="Selesai"
                                android:textColor="@color/black_head"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/headerOrderDivider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_light"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="5dp"
                                android:paddingVertical="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/tvOrderStatus" />

                            <TextView
                                android:id="@+id/tvOrderDateLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Pembelian"
                                android:textColor="@color/black_head"
                                android:layout_marginTop="10dp"
                                android:textSize="10sp"
                                app:layout_constraintTop_toBottomOf="@id/headerOrderDivider"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/tvOrderDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tvOrderDateLabel"
                                app:layout_constraintBottom_toBottomOf="@id/tvOrderDateLabel"
                                android:text="Senin, 13 April 2023"
                                android:textColor="@color/black_head"
                                android:textSize="10sp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/cardStatusOrder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/cardProduct">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_marginVertical="7dp"
                            android:paddingHorizontal="20dp"
                            android:layout_height="match_parent">

                            <View
                                android:id="@+id/detailProductLabelDivider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_light"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="5dp"
                                android:paddingVertical="10dp"
                                android:layout_marginBottom="5dp"
                                app:layout_constraintTop_toBottomOf="@+id/tvDetailLabel" />

                            <TextView
                                android:id="@+id/tvDetailLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Detail Produk"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textStyle="bold"
                                android:textColor="@color/black_head"
                                android:textSize="14sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="5dp"
                                android:id="@+id/recViewProduct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@+id/detailProductLabelDivider"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/cardProduct"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/cardShipment">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_marginVertical="7dp"
                            android:paddingHorizontal="20dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvShipmentLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Detail Pengiriman"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textStyle="bold"
                                android:textColor="@color/black_head"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/addressTitleDivider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_light"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="5dp"
                                android:paddingVertical="10dp"
                                android:layout_marginBottom="5dp"
                                app:layout_constraintTop_toBottomOf="@+id/tvShipmentLabel" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Kurir"
                                android:layout_marginTop="5dp"
                                android:id="@+id/tvCourierNameLabel"
                                android:textSize="10sp"
                                app:layout_constraintTop_toBottomOf="@id/addressTitleDivider"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="-"
                                android:id="@+id/tvCourierName"
                                app:layout_constraintTop_toTopOf="@id/tvCourierNameLabel"
                                app:layout_constraintBottom_toBottomOf="@id/tvCourierNameLabel"
                                app:layout_constraintEnd_toEndOf="parent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="WhatsApp Kurir"
                                android:id="@+id/tvCourierPhoneLabel"
                                app:layout_constraintTop_toBottomOf="@id/tvCourierNameLabel"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="-"
                                android:id="@+id/tvCourierPhone"
                                app:layout_constraintTop_toTopOf="@id/tvCourierPhoneLabel"
                                app:layout_constraintBottom_toBottomOf="@id/tvCourierPhoneLabel"
                                app:layout_constraintEnd_toEndOf="parent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="Alamat"
                                android:id="@+id/tvAddressLabel"
                                app:layout_constraintTop_toBottomOf="@id/tvCourierPhoneLabel"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@id/tvAddressLabel"
                                app:layout_constraintTop_toTopOf="@id/tvAddressLabel">
                                <TextView
                                    android:id="@+id/tvSendName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:text="D'Riski Maulana" />

                                <TextView
                                    android:id="@+id/tvSendPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvSendName"
                                    android:textSize="10sp"
                                    android:text="085156087141" />

                                <TextView
                                    android:id="@+id/tvSendAddress"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvSendPhone"
                                    android:textSize="10sp"
                                    android:textAlignment="textEnd"
                                    android:text="Galley La Company 03/01, Water Seven, Grand Line 40089" />



                            </androidx.constraintlayout.widget.ConstraintLayout>




                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/cardShipment"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/cardPaymentDetail">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_marginVertical="7dp"
                            android:paddingHorizontal="20dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvPaymentLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rincian_pembayaran"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textStyle="bold"
                                android:textColor="@color/black_head"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/sendAddressDivider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_light"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="5dp"
                                android:paddingVertical="10dp"
                                android:layout_marginBottom="5dp"
                                app:layout_constraintTop_toBottomOf="@+id/tvPaymentLabel" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Harga"
                                android:id="@+id/tvTotalPriceLabel"
                                app:layout_constraintTop_toBottomOf="@id/sendAddressDivider"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textSize="10sp"
                                android:layout_marginTop="5sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 20000"
                                android:id="@+id/tvTotalHarga"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvTotalPriceLabel"
                                app:layout_constraintBottom_toBottomOf="@+id/tvTotalPriceLabel"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ongkos Kirim"
                                android:id="@+id/tvFreightPriceLabel"
                                android:layout_marginBottom="5dp"
                                app:layout_constraintTop_toBottomOf="@id/tvTotalPriceLabel"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 10000"
                                android:id="@+id/tvFreightPrice"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvFreightPriceLabel"
                                app:layout_constraintBottom_toBottomOf="@+id/tvFreightPriceLabel"
                                android:textSize="10sp" />

                            <View
                                android:id="@+id/totalBelanjaDivider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_light"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="5dp"
                                android:paddingVertical="10dp"
                                android:layout_marginBottom="5dp"
                                app:layout_constraintTop_toBottomOf="@+id/tvFreightPrice" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Belanja"
                                android:id="@+id/tvTotalLabel"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black_head"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/totalBelanjaDivider"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 10000"
                                android:id="@+id/tvTotalFullPrice"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvTotalLabel"
                                app:layout_constraintBottom_toBottomOf="@+id/tvTotalLabel"
                                android:textStyle="bold"
                                android:textColor="@color/black_head"
                                android:textSize="12sp" />




                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <FrameLayout
                        android:id="@+id/btnPay"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="70dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardPaymentDetail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/primary_button">

                        <TextView
                            android:id="@+id/submitTextview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Bayar"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <ProgressBar
                            android:id="@+id/submitBayarLoading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnFinish"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:visibility="gone"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="70dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardPaymentDetail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/primary_button">

                        <TextView
                            android:id="@+id/finishTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Selesai"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <ProgressBar
                            android:id="@+id/submitFinishLoading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            android:layout_gravity="center" />
                    </FrameLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    <ProgressBar
        android:id="@+id/orderDetailsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
